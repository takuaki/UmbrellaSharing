<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="umbrella.tokyo.jp.umbrella.MainActivity">
    <android.support.v7.widget.CardView
        android:id="@+id/weather_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.github.pwittchen.weathericonview.WeatherIconView
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2">
                <ImageView
                    android:id="@+id/image_weather"
                    android:contentDescription="@string/weather_card_icon_description"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="2"/>
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="@string/weather_card_city_name"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="@string/weather_card_weather_description"
                    android:textAlignment="center"/>
                <!--TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/weather_sunny"/-->
            </GridLayout>
    </android.support.v7.widget.CardView>
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>
</FrameLayout>
